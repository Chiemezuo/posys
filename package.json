{
  "name": "posys",
  "description": "posys: A PoS System",
  "version": "0.0.1",
  "license": "GPL-3.0",
  "repository": "https://github.com/seiyria/posys",
  "scripts": {
    "electron": "electron .",
    "test:lint": "tslint --force 'src/**/*.ts'",
    "test:lint:fail": "tslint 'src/**/*.ts'",
    "test": "npm run test:lint:fail && npm run ionic:build",
    "clear:all": "rm -rf ./platforms/*-x64",
    "clear:osx": "rm -rf *-darwin-x64; rm -rf ./platforms/*-mas-x64",
    "clear:win": "rm -rf *-win32-ia32; rm -rf ./platforms/*-win32-x64",
    "clear:nix": "rm -rf *-linux-ia32; rm -rf ./platforms/*-linux-x64",
    "pack:osx": "npm run clear:osx && electron-packager ./www/ --platform=darwin,mas --arch=x64 --asar --out=platforms",
    "pack:win": "npm run clear:win && electron-packager ./www/ --platform=win32 --arch=ia32,x64 --asar --out=platforms",
    "pack:nix": "npm run clear:nix && electron-packager ./www/ --platform=linux --arch=ia32,x64 --asar --out=platforms",
    "ionic:build": "ionic-app-scripts build",
    "ionic:build:electron": "npm run ionic:build && cp electron.js www/electron.js && cp package.json www/package.json && npm run server:build",
    "ionic:serve": "ionic-app-scripts serve",
    "start": "npm run ionic:serve",
    "start:server": "nodemon --ignore \"*.json\" --exec \"ts-node\" -- \"src/server/index.ts\"",
    "server:build": "tsc -p src/server",
    "migrate:latest": "knex migrate:latest --knexfile src/server/knexfile.ts",
    "migrate:rollback": "knex migrate:rollback --knexfile src/server/knexfile.ts",
    "migrate:reset": "npm run migrate:rollback && npm run migrate:latest",
    "seed:run": "knex seed:run --knexfile src/server/knexfile.ts"
  },
  "main": "electron.js",
  "config": {
    "ionic_src_dir": "src/client"
  },
  "dependencies": {
    "@angular/common": "^2.4.1",
    "@angular/compiler": "^2.4.1",
    "@angular/compiler-cli": "^2.4.1",
    "@angular/core": "^2.4.1",
    "@angular/forms": "^2.4.1",
    "@angular/http": "^2.4.1",
    "@angular/platform-browser": "^2.4.1",
    "@angular/platform-browser-dynamic": "^2.4.1",
    "@angular/platform-server": "^2.4.1",
    "@ionic/storage": "1.1.6",
    "app-root-path": "^2.0.1",
    "body-parser": "^1.15.2",
    "bookshelf": "^0.10.2",
    "bookshelf-paranoia": "^0.9.0",
    "bookshelf-validate": "^2.0.2",
    "cors": "^2.8.1",
    "currency-codes": "^1.1.2",
    "date-fns": "^1.21.1",
    "express": "^4.14.0",
    "file-saver": "^1.3.3",
    "ionic-angular": "^2.0.0-rc.4",
    "ionic-native": "2.2.3",
    "ionic2-pagination": "^0.1.0",
    "ionicons": "3.0.0",
    "knex": "^0.12.6",
    "lodash": "^4.17.2",
    "ng2-webstorage": "^1.4.1",
    "node-thermal-printer": "^1.0.3",
    "papaparse": "^4.1.2",
    "pg": "^6.1.0",
    "printer": "^0.2.2",
    "rxjs": "^5.0.2",
    "zone.js": "^0.7.4"
  },
  "devDependencies": {
    "@ionic/app-scripts": "0.0.45",
    "@types/lodash": "^4.14.39",
    "@types/node": "0.0.0",
    "@types/text-encoding": "0.0.30",
    "codelyzer": "1.0.0-beta.3",
    "del": "2.2.0",
    "electron-packager": "^7.3.0",
    "electron-prebuilt": "^1.2.6",
    "nodemon": "^1.11.0",
    "ts-node": "1.7.0",
    "tslint": "^3.15.1",
    "typescript": "2.0.6"
  },
  "cordovaPlugins": [
    "cordova-plugin-device",
    "cordova-plugin-console",
    "cordova-plugin-whitelist",
    "cordova-plugin-splashscreen",
    "cordova-plugin-statusbar",
    "ionic-plugin-keyboard"
  ],
  "cordovaPlatforms": [
    "ios",
    {
      "platform": "ios",
      "version": "",
      "locator": "ios"
    },
    "android"
  ]
}
